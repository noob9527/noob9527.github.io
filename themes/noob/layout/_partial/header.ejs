<header id="site-nav">
    <div id="banner"></div>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            
             <!-- social link-->
            <div class="social-link">
                <ul class="nav navbar-nav navbar-left">
                    <% if(theme.link){ %>
                        <% for(var item in theme.link){ %>
                            <li><a href="<%- theme.link[item] %>" target="_blank">
                                <i class="fa fa-2x fa-<%- theme.link_icons[item] %>"></i>
                            </a></li>
                        <% } %>
                    <% } %>
                    <% if(theme.rss){ %>
                        <li><a href="<%- url_for(theme.rss) %>" rel="alternate">
                            <i class="fa fa-2x fa-rss"></i>
                        </a></li>
                    <% } %>
                </ul>
            </div>
            
            <div class="navbar-header">
                <!--toggle button-->
                <button class="navbar-toggle collapsed" data-toggle="collapse" 
                        data-target="#navbar-link" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <!--brand-->
                <a href="<%- url_for() %>" class="navbar-brand">
                    <span>NOOB</span>
                </a>
            </div>
            
            <!--link-->
            <div class="collapse navbar-collapse" id="navbar-link">
                <ul class="nav navbar-nav navbar-right">
                    <% for(var item in theme.menu ){ %>
                        <li>
                            <a href="<%- url_for(theme.menu[item]) %>" rel="section">
                                <% if (theme.menu_icons.enable ){ %>
                                    <i class="fa fa-<%- theme.menu_icons[item] || 'question-circle' %> fa-fw"></i>
                                <% }%>
                                <%- __('menu.'+item) %>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
</header>
